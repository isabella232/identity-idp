<% title t('forms.backup_code.title') %>

<h5 class="my1 caps bold accent-blue">
  <%= t('in_person_proofing.step', step: 3) %>
</h5>

<br/>

<h1 class="h3 my0">
  <%= t('in_person_proofing.headings.enrollment_form') %>
</h1>
<p class="mt-tiny mb3">
  <%= t('in_person_proofing.info.enrollment_form') %>
</p>

<div class="mb4">
  <fieldset class="m0 p0 rounded-xl">
    <ul class="list-reset">
      <li class="px-12p mb1 border-none mt1 m2">
        <div class="inline-block h1 bold">
          <%= t('in_person_proofing.enrollment_form') %>
        </div>
        <div class="h5 mt0 mb0 pt1 pb2 fs-12p">
          <%= t('users.backup_code.generated_on_html',
                date: content_tag(:strong, I18n.l(Time.zone.today, format: '%B %d, %Y'))) %>
        </div>
        <div class="inline-block">
          <%= t('in_person_proofing.instructions.enrollment_form') %>
        </div>
        <br/>
        <br/>
        ROSSLYN POST OFFICE
        <br/>
        1101 WILSON BLVD STE 1 ARLINGTON, VA 22209-9998
      </li>
      <li class="mb0 border-top">
        <%= render 'shared/alert', {
          type: 'warning',
          class: 'bold border-bottom',
          message: t('in_person_proofing.warning.enrollment_form'),
        } %>
        <table class="pl4 pr3 monospace">
          <tr>
            <td class="center">
              <%= image_tag(asset_url('idv/bar_code.png'), height: 140) do %>
                <br/>
                <br/>
              <% end %>
            </td>
          </tr>
        </table>
        <div class="center mt1">
          <%= link_to t('forms.backup_code.download'), backup_code_download_path,
                        class: 'text-decoration-none ico btn-border ico-download' %>
          <%= link_to t('forms.backup_code.print'), '#',
                        data: { print: true },
                        class: 'ico ico-print btn-border ml2 text-decoration-none' %>
        </div>
      </li>
    </ul>
  </fieldset>
</div>

<%= link_to t('forms.buttons.continue'), account_path, class: 'btn btn-primary btn-wide' %>

<br/>

<%= render 'idv/in_person/start_over_or_cancel' %>

<%= javascript_pack_tag 'clipboard' %>
